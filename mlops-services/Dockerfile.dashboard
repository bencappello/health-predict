FROM python:3.10-slim

WORKDIR /app

COPY scripts/requirements-dashboard.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY scripts/drift_dashboard.py drift_dashboard.py

EXPOSE 8501

CMD ["streamlit", "run", "drift_dashboard.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true"]
