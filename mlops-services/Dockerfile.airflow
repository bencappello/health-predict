FROM apache/airflow:2.8.1

USER root

# Install system dependencies if needed
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

USER airflow

# Install Python packages
RUN pip install --no-cache-dir \
    mlflow==2.17.2 \
    pandas>=2.0.0 \
    scikit-learn>=1.3.0 \
    ray[tune]>=2.9.0 \
    xgboost>=2.0.0 